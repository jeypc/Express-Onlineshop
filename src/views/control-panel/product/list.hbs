<div class="content-wrapper" id="product-list">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <small>Product List</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Forms</a></li>
      <li class="active">General Elements</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!--/.col (left) -->
      <!-- right column -->
      <div class="col-md-12">
        <!-- Horizontal Form -->
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Products</h3>
            <div class="pull-right">
              <a href="/control-panel/product/create" class="btn btn-info">Add New Product</a>
            </div>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <div class="box-body">
            <table class="table table-responsive table-striped table-hovered" id="productTable">
              <thead>
                <tr>
                  <th style="width: 54px; text-align: center"><i class="fa fa-image"></i></th>
                  <th>Name</th>
                  <th>Short Description</th>
                  <th>Price</th>
                  <th>Categories</th>
                  <th style="width: 70px;">Option</th>
                </tr>
              </thead>
              <tbody>
                {{#if products}}
                  {{#each products}}
                    <tr>
                      <td>
                        <a href="{{ productImage this.image}}" target="_blank">
                          <img style="height: 50px; width: 50px" class="product-img" src="{{ productImage this.image}}" alt="">
                        </a>
                      </td>
                      <td>{{ this.name }}</td>
                      <td>{{ this.shortDescription }}</td>
                      <td>{{ this.price }}</td>
                      <td>
                        {{#each this.categories}}
                          <span class="label label-info">{{ this.name }}</span>
                        {{/each}}
                      </td>
                      <td>
                        <a style="margin-right: 3px" class="btn btn-xs btn-warning" href="/control-panel/product/edit/">
                          <i class="fa fa-pencil"></i>
                        </a>

                        <button class="btn btn-xs btn-danger delete" data-id="{{ this._id }}">
                          <i class="fa fa-trash"></i>
                        </button>
                      </td>
                    </tr>
                  {{/each}}
                {{else}}
                  <tr>
                    <td colspan="5">No product found</td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
              {{{paginate pagination}}}
          </div>
        </div>
        <!-- /.box -->
      </div>
      <!--/.col (right) -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>